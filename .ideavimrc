"" Source your .vimrc
"source ~/.vimrc

let mapleader = " " " set mapleader to space

"" -- Suggested options --
" Show a few lines of context around the cursor. Note that this makes the
" text scroll if you mouse-click near the start or end of the window.
set scrolloff=8

" Do incremental searching.
set incsearch
set ignorecase
set smartcase
set hlsearch
clearForm
" Use system clipboard
set clipboard='unnamedplus'
" Don't use Ex mode, use Q for formatting.

"" -- Map IDE actions to IdeaVim -- https://jb.gg/abva4t
"" Map \r to the Reformat Code action
"map \r <Action>(ReformatCode)

"" Map <leader>d to start debug
"map <leader>d <Action>(Debug)

"" Map \b to toggle the breakpoint on the current line
"map \b <Action>(ToggleLineBreakpoint)


" Find more examples here: https://jb.gg/share-ideavimrc
"Plugins
" NERDTree
set NERDTree
" Which-key
set which-key
set notimeout
set timeoutlen=5000"

" Keybindings
map Q gq
nmap gi <Action>(GotoImplementation)
nmap gr <Action>(FindUsages)
imap jj <Esc>
map <leader>ee :NERDTreeToggle<CR>
map <leader>ef :NERDTreeFind<CR>
map <leader>bc <Action>(CloseContent)
map <leader>bo <Action>(CloseAllEditorsButActive)
map <leader>bq <Action>(CloseAllEditors)
map <leader>db <Action>(ToggleLineBreakpoint)

" Keybindings window navigation
map <C-h> <C-w>h
map <C-j> <C-w>j
map <C-k> <C-w>k
map <C-l> <C-w>l
